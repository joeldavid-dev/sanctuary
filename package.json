{
  "name": "codaby-sanctuary",
  "version": "1.2.1",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.codaby.sanctuary",
    "productName": "Sanctuary",
    "directories": {
      "output": "out"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Utility",
      "executableName": "codaby-sanctuary",
      "synopsis": "Secure local data storage"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "Sanctuary",
      "license": "LICENSE",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "joeldavid-dev",
        "repo": "sanctuary"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/*.dll",
      "**/ffmpeg*",
      "**/ffmpeg-static/**"
    ]
  },
  "keywords": [],
  "author": "Joel David C.",
  "license": "GPL-3.0-only",
  "description": "Sanctuary is an application that will help you store your private data locally",
  "devDependencies": {
    "@electron/packager": "18.3.6",
    "electron": "39.0.0",
    "electron-builder": "26.0.12",
    "standard": "17.1.0"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "electron-updater": "6.6.2",
    "ffmpeg-static": "5.3.0",
    "fluent-ffmpeg": "2.1.3",
    "jpeg-js": "0.4.4",
    "pngjs": "7.0.0",
    "sqlite3": "5.1.7"
  }
}
